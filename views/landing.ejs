<%- include('includes/topHTML.ejs') %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col text-center text-light">
            <h1>Welcome To Mars Images Browser</h1>
            <h2>Please sign in or register to enter the website</h2>
        </div>
    </div>

    <% if(typeof message !== "undefined"){%>
        <div class="row justify-content-md-center">
            <% if(messageType === "error"){ %>
                <%- include('includes/errorAlert.ejs') %>
            <% } else{ %>
                    <%- include('includes/successAlert.ejs') %>
                <% } %>
        </div>
    <% } %>

    <div class="row m-2 justify-content-md-center">
        <div class="col-8 centered">
            <form id="form" action="/login" method="post">
                <div class="form-group mb-3">
                    <label for="Email" class="form-label fs-3">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" style="text-transform: lowercase" placeholder="example@example.com" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Password" class="form-label fs-3">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" pattern=".*{8,}" required>
                </div>
                <input type="submit" class="btn btn-primary" value="Login">
            </form>
        </div>

        <div class="col-12 text-center">
            <label for="Register" class="col-12 mr-2">Don't have account yet?</label>
            <button class="rounded btn bg-primary text-light m-1 p-2" id="Register">Register</button>
        </div>
    </div>
</div>
</body>
</html>