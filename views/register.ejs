<%- include('includes/topHTML.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center">Register</h1>
            </div>
        </div>

        <% if(typeof massage !== "undefined"){%>
            <div class="row justify-content-md-center">
                <div class="col-8 alert alert-danger alert-dismissible fade show" role="alert">
                    <div>
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/>
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        <%= massage %>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        <% } %>

        <div class="row justify-content-md-center">
            <div class="col-6">
                <form id="form" action="/register/password" method="post" class="needs-validation">
                    <div class="form-group mb-3">
                        <label for="FirstName" class="form-label">Name:</label>
                        <input  type="text" class="form-control" id="FirstName" name="FirstName" pattern="[A-Za-z]+" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="LastName" class="form-label">Last Name:</label>
                        <input type="text" class="form-control" id="LastName" name="LastName" pattern="[A-Za-z]+" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="Email" class="form-label" style="text-transform: lowercase">Email:</label>
                        <input type="email" class="form-control" id="Email" name="Email" required>
                        <div id="emailError" class="invalid-feedback">
                            Email is already exist
                        </div>
                    </div>
                    <input type="submit" id="Send" class="btn btn-primary rounded" value="Send">
                </form>
            </div>
        </div>
    </div>
</body>
</html>